<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="panda_gripper">

<!-- robot constants -->
<xacro:property name="mass" value="0.5" /> <!-- arbitrary value for mass -->

<xacro:macro name="panda_gripper" params=" description_pkg:='franka_panda_gripper_description' connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">

<xacro:unless value="${connected_to == ''}">
	<joint name="${ns}_hand_joint" type="fixed">
		<parent link="${connected_to}"/>
		<child link="${ns}_hand"/>
		<origin xyz="${xyz}" rpy="${rpy}"/>
	</joint>
</xacro:unless>

<!-- Used for fixing robot to Gazebo ground in case the robot is not connected to any other component -->
<xacro:if value="${connected_to == ''}">
	<link name="world"/>
	<joint name="fix_to_world" type="fixed">
		<parent link="world"/>
		<child link="${ns}_hand"/>
		<origin xyz="${xyz}" rpy="${rpy}"/>
	</joint>
</xacro:if>

<link name="${ns}_hand">
	<visual>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/visual/hand.dae"/>
	</geometry>
	</visual>
	
	<collision>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/collision/hand.stl"/>
	</geometry>
	</collision>
	
	<inertial>
		<origin xyz="0 0 ${1/2}" rpy="0 0 0"/>
		<mass value="0.7"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>
</link>

<link name="${ns}_leftfinger">
	<visual>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/visual/finger.dae"/>
	</geometry>
	</visual>
	
	<collision>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/collision/finger.stl"/>
	</geometry>
	</collision>
	
	<inertial>
		<origin xyz="0 0 ${1/2}" rpy="0 0 0"/>
		<mass value="0.3"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>
</link>

<link name="${ns}_rightfinger">
	<visual>
	<origin xyz="0 0 0" rpy="0 0 ${pi}"/>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/visual/finger.dae"/>
	</geometry>
	</visual>
	
	<collision>
	<origin xyz="0 0 0" rpy="0 0 ${pi}"/>
	<geometry>
	<mesh filename="package://${description_pkg}/model/meshes/collision/finger.stl"/>
	</geometry>
	</collision>
	
	<inertial>
		<origin xyz="0 0 ${1/2}" rpy="0 0 0"/>
		<mass value="0.3"/>
		<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
	</inertial>
</link>

<joint name="${ns}_finger_joint1" type="prismatic">
	<parent link="${ns}_hand"/>
	<child link="${ns}_leftfinger"/>
	<origin xyz="0 0 0.0584" rpy="0 0 0"/>
	<axis xyz="0 1 0"/>
	<limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
</joint>

<joint name="${ns}_finger_joint2" type="prismatic">
	<parent link="${ns}_hand"/>
	<child link="${ns}_rightfinger"/>
	<origin xyz="0 0 0.0584" rpy="0 0 0"/>
	<axis xyz="0 -1 0"/>
	<limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
</joint>


<transmission name="${ns}_finger_trans1">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="${ns}_finger_joint1">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
  </joint>
  <actuator name="${ns}_finger_motor1">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>

<transmission name="${ns}_finger_trans2">
  <type>transmission_interface/SimpleTransmission</type>
  <joint name="${ns}_finger_joint2">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
  </joint>
  <actuator name="${ns}_finger_motor2">
    <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    <mechanicalReduction>1</mechanicalReduction>
  </actuator>
</transmission>

</xacro:macro>
</robot>
