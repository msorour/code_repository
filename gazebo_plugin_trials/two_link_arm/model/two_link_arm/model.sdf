<?xml version="1.0"?>
<sdf version="1.5">
<model name="two_link_arm">
  
  <!-- link0 -->
  <link name="link0">
    <pose>0 0 0.25 0 0 0</pose>
    
    <inertial>
      <mass>1.0</mass>
      <inertia>
        <ixx>0.002</ixx>
        <iyy>0.002</iyy>
        <izz>0.001</izz>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyz>0</iyz>
      </inertia>
    </inertial>
    
    <collision name="collision">
      <geometry>
      <box>
      <size>0.1 0.1 0.5</size>
      </box>
      </geometry>
    </collision>

    <visual name="visual">
      <geometry>
      <box>
      <size>0.1 0.1 0.5</size>
      </box>
      </geometry>
    </visual>
  </link>
  
  <!-- link1 -->
  <link name="link1">
    <pose>0.1 0 0.75 0 0 0</pose>
    
    <inertial>
      <mass>1.0</mass>
      <inertia>
        <ixx>0.002</ixx>
        <iyy>0.002</iyy>
        <izz>0.001</izz>
        <ixy>0</ixy>
        <ixz>0</ixz>
        <iyz>0</iyz>
      </inertia>
    </inertial>
    
    <collision name="collision">
      <geometry>
      <box>
      <size>0.1 0.1 0.5</size>
      </box>
      </geometry>
    </collision>

    <visual name="visual">
      <geometry>
      <box>
      <size>0.1 0.1 0.5</size>
      </box>
      </geometry>
    </visual>
  </link>
  
  <!-- joint1 -->
  <joint type="revolute" name="joint">
    <!-- Position the joint at the bottom of the top link -->
    <pose>0 0 0.5 0 0 0</pose>
    <parent>link0</parent>
    <child>link1</child>
    <!-- The axis defines the joint's degree of freedom -->
    <axis>
      <!-- Revolve around the z-axis -->
      <xyz>0 0 1</xyz>
      <!-- Limit refers to the range of motion of the joint -->
      <limit>
      <lower>-2.5</lower>
      <upper>2.5</upper>
      </limit>
    </axis>
  </joint>
  
</model>
</sdf>
